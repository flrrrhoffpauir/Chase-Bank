/*---------------------------------------------------------------------------Class Name:		Section508Description:	Aids in setting up accessibility in Flash. 								Call Section508.update() after all objects' accessibility properties				have been defined. Calling this method after every individual object				is set can bog down screen readers.				Created By:		Kim FaulknerDate Modified:	05/21/08---------------------------------------------------------------------------*/class util.Section508 {	public function Section508() {			}		public static function setAccObj(target:Object, targetVal:Boolean, childVal:Boolean):Void {		// set boolean values to true if you want users to access it, false if screen readers should skip it		// note: all objects are accessible to screen readers by default		if(!target._accProps) target._accProps = new Object();		target._accProps.silent = !targetVal;		target._accProps.forceSimple = !childVal;				// make sure to call Section508.update() to complete accessibility property updates.	}		public static function setAccProps(target:Object, name:String, desc:String, shortcut:String):Void {		if(name != null && name != undefined) target._accProps.name = name;		if(desc != null && desc != undefined) target._accProps.description = desc;		if(shortcut != null && shortcut != undefined) target._accProps.shortcut = shortcut;				// make sure to call Section508.update() to complete accessibility property updates.	}		public static function update():Void {		Accessibility.updateProperties();	}		public static function setTab(target:MovieClip, index:Number):Void {		target.tabEnabled = true;		target.tabIndex = index;	}		public static function removeTab(target:Object, newFocus:Object):Void {		// when removing a tabIndex, if that tab is currently focused IE will bomb unless a new focus is set.				target.tabEnabled = false;		if(newFocus) {			setFocusRect(newFocus);			Selection.setFocus(newFocus);		}	}		public static function getAidStatus():Boolean {		// make sure document has been fully loaded for 2 seconds		// before calling this function or it can give a false negative		return Accessibility.isActive(); 	}		public static function setFocusRect(target:Object):Void {		// determine if the mouse is present over the flash movie.		// if the mouse is present, leave the ugly focus rectangle off.		target._focusrect = !_root.hitTest(_root._xmouse, _root._ymouse, true);	}		// ----- private functions ----- //	}