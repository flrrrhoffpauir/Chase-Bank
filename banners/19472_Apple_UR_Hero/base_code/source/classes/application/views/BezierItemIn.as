			var dlay:Number = 1;			for(var i:Number = 0; i < _numOfItems; i++)			{				// -- init "item" clips															item = MovieClip(_scope.getChildByName("item"+i));				item.id = i;				item.ox = item.x;				item.oy = item.y;								switch(_bannerID)				{					case 1:					item.x = 716;					item.y = 300;					item.scaleX = item.scaleY = 0;										item.addEventListener(MouseEvent.ROLL_OVER, checkRollOver);					item.addEventListener(MouseEvent.ROLL_OUT, checkRollOut);					item.link = _linkArray[i];					item.addEventListener(MouseEvent.CLICK, checkRelease);					item.buttonMode = item.useHandCursor = item.mouseEnabled = true;					item.mouseChildren = false;										break;															case 2:					item.x = 20;					item.y = 505;					item.scaleX = item.scaleY = 1.4;					TweenMax.to(item, 0, { blurFilter:{ blurX:20, blurY:20 } });					break;															default:									};																if(_bannerID == 1) {					TweenMax.to(item, SPEED*3, { delay:dlay, scaleX:1, scaleY:1, bezierThrough:[ { x:_bezArray[i][0], y:_bezArray[i][1] }, { x:item.ox, y:item.oy } ], orientToBezier:false, ease:EASE });					dlay += 0.1;				};								if(_bannerID == 2) {					TweenMax.to(item, SPEED*2.5, { delay:dlay, scaleX:1, scaleY:1, bezierThrough:[ { x:_bezArray[i][0], y:_bezArray[i][1] }, { x:item.ox, y:item.oy } ], orientToBezier:false, blurFilter:{ blurX:0, blurY:0 }, ease:EASE });					dlay += 0.2;										if(i == 0) {						_scope.shadowmc.x = -261;						// _scope.shadowmc.y = 223;						TweenMax.to(_scope.shadowmc, SPEED*2.5, { delay:dlay, x:289, ease:EASE });					};				};															};		};						private function checkRollOver(e:MouseEvent):void		{			var id:Number = e.currentTarget.id;						// pause the slide show			dispatchEvent(new SlideShowEvent(SlideShowEvent.PAUSE_SHOW));						// scale item up			var mc:MovieClip = e.target as MovieClip;			TweenMax.to(mc, SPEED, { scaleX:1.1, scaleY:1.1, glowFilter:{ color:0x0066CC, alpha:.5, blurX:30, blurY:30 }, ease:EASE });		};						private function checkRollOut(e:MouseEvent):void		{			var id:Number = e.currentTarget.id;						// resume the slide show			dispatchEvent(new SlideShowEvent(SlideShowEvent.RESUME_SHOW));						// scale item down			var mc:MovieClip = e.target as MovieClip;			TweenMax.to(mc, SPEED, { scaleX:1, scaleY:1, glowFilter:{ color:0xffffff, alpha:0, blurX:0, blurY:0 }, ease:EASE });		};						private function checkRelease(e:MouseEvent):void		{			if(e.currentTarget.link != "")			{				var req:URLRequest = new URLRequest(e.currentTarget.link);				navigateToURL(req, "_self");			};		};			};	}; // end